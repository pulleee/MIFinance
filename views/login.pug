extends layout.pug

block title
    title Login 

block content 
    div.panel.panel-default.p-5.bg-secondary.rounded.text-light
        h1 Willkommen bei 
            br
            span.brand_blue M
            span.brand_yellow I 
            span.brand_red Finance
        p Verwalte dein Aktiendepot mit MI Finance
    
    form.mt-5.w-25(action="login" method="post")
        div.form-group
            label(for="inputUsername") Nutzername:
            input.form-control(type="text", id="inputUsername", placeholder="Nutzername eingeben", name="username")
        div.form-group
            label(for="inputPassword") Passwort:
            input.form-control(type="password", id="inputPassword" placeholder="Passwort eingeben", name="password")
        div.form-group
            button.btn.btn-primary(type="submit") Login
      
    if login_error
        div.alert.alert-danger(role="alert") #{login_error}
    
